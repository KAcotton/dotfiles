# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good =	 '#859900'	 
	color_degraded = '#b58900'
	color_bad =	 '#cb4b16'
	interval = 1
}

#order += "ipv6"
order += "volume master"
order += "disk /"
order += "disk /home"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "load"
order += "tztime local1"
order += "tztime local"


volume master {
	format = " Vol: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}


wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}


battery 0 {
        format = "%status %percentage %remaining"
}


tztime local1 {
	format = "%m-%d-%Y"
}

tztime local {
        format = "%I:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "Root: %avail"
}

disk "/home" {
        format = "Home: %avail"
}

